cflags = -Wall
ldflags = -lcurl
# -lcurl: libcurl4-openssl-dev

rule cc
  command = g++ -c $cflags $in -o $out

rule link
  command = g++ $in -o $out $ldflags

build .build/gmcapi/GmcApiRequest.o: cc src/gmcapi/GmcApiRequest.cpp
build .build/gmcapi/GmcConnection.o: cc src/gmcapi/GmcConnection.cpp
build .build/gmcapi/Paths.o: cc src/gmcapi/Paths.cpp
build .build/main.o: cc src/main.cpp

build server-restarter: link .build/main.o .build/gmcapi/GmcApiRequest.o .build/gmcapi/GmcConnection.o .build/gmcapi/Paths.o
